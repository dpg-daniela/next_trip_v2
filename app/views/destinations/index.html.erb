<div class="page-header">
  <h1>
    Destinations

    <a href="/destinations/new" class="btn btn-lg btn-success">New Destination</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Country</th>

        <th>Destination type</th>

        <th>Destination name</th>

        <th>Image1</th>

        <th>Image2</th>

        <th>Image3</th>

        <th>Image4</th>

        <th>Actions</th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>

        <td><%= destination.country %></td>

        <td><%= destination.destination_type %></td>

        <td><%= destination.destination_name %></td>

        <td><%= destination.image1 %></td>

        <td><%= destination.image2 %></td>

        <td><%= destination.image3 %></td>

        <td><%= destination.image4 %></td>

        <td>

          <a href="/destinations/<%= destination.id %>" class="btn btn-primary">Show</a>
          <a href="/destinations/<%= destination.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_destination/<%= destination.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
